<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:ignore="contentDescription"
    tools:context="com.trackm3.censoforestal.Track"
    android:background="#ff8d9078"
    android:id="@+id/marco_pp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Ingreso_track"
        android:id="@+id/lbl_titulo"
        android:textColor="#ff000000"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linea1" >

    </TableRow>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/navegacion"
        android:paddingTop="5dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_auxiliar"
            android:src="@drawable/ico_08_menu_aux"
            android:background="#ff8d9078" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/invisible"
            android:background="#ff585857"
            android:layout_marginLeft="5dp"
            android:visibility="invisible"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/limpiar"
            android:src="@drawable/ico_11_limpiar"
            android:background="#ff8d9078"
            android:layout_gravity="top" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guardar"
            android:src="@drawable/ico_06_guard"
            android:background="#ff8d9078"
            android:baselineAlignBottom="false"
            android:layout_marginLeft="5dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/atras"
            android:src="@drawable/ico_05_flecha_atr"
            android:background="#ff8d9078"
            android:layout_marginLeft="5dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/adelante"
            android:src="@drawable/ico_07_flecha_adel"
            android:background="#ff8d9078"
            android:layout_marginLeft="5dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton6"
            android:src="@drawable/ico_10_adicionar"
            android:background="#ff8d9078"
            android:layout_marginLeft="5dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:background="#ff5c7689"
                android:layout_marginTop="10dp"
                android:id="@+id/tabla1">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/linea1">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/invisible2"
                        android:layout_weight="0.3"
                        android:visibility="invisible" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/AutoTrack"
                        android:id="@+id/lbl_autotrack"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="#ffffffff" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linea3">

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/grabar"
                        android:layout_weight="0.3"
                        android:src="@drawable/ico_13_grabar"
                        android:background="#ff5c7689"
                        android:layout_gravity="center_vertical" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:id="@+id/auto_track"
                        android:hint="@string/AutoTrack"
                        android:layout_weight="1"
                        android:inputType="text"
                        android:background="#ffffffff"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="#ff000000"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textColorHint="#ffffffff" />

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/invisible3"
                        android:layout_weight="0.3"
                        android:visibility="invisible" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/TrackGPS"
                        android:id="@+id/gps_track"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="#ffffffff" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tableRow4"
                    android:layout_marginBottom="5dp" >

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/invisible4"
                        android:layout_weight="0.3"
                        android:background="#ff5c7689"
                        android:layout_gravity="center_vertical"
                        android:visibility="invisible" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:id="@+id/track_gps"
                        android:hint="@string/TrackGPS"
                        android:layout_weight="1"
                        android:inputType="text"
                        android:background="#ffffffff"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="#ff000000"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textColorHint="#ffffffff" />
                </TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Observ"
                    android:id="@+id/lbl_observaciones"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:gravity="center_horizontal"
                    android:textColor="#ffffffff" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:id="@+id/observ"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:inputType="textMultiLine"
                    android:textColor="#ffffffff"
                    android:background="@drawable/marco1"
                    android:hint="@string/Observ"
                    android:textColorHint="#ff5c7689" />
            </TableLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
