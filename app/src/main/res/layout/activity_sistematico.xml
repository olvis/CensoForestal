<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff585857"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="5dp"
    tools:context="com.trackm3.censoforestal.Sistematico"
    tools:ignore="ContentDescription"
    android:id="@+id/marco_pp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/CensoSistematico"
        android:id="@+id/titulo"
        android:textColor="#ffffffff"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/control"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/Seguim_origen"
            android:id="@+id/predecesor"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#ffffffff"
            android:paddingLeft="5dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/ID"
            android:id="@+id/no_id"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#ffffffff"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Registro"
            android:textSize="12sp"
            android:textColor="#ffffffff"
            android:id="@+id/registro"
            android:layout_weight="1"
            android:gravity="end"
            android:paddingRight="5dp" />

    </TableRow>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/navegacion"
        android:paddingTop="5dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_auxiliar"
            android:src="@drawable/ico_08_menu_aux"
            android:background="#ff585857" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/invisible"
            android:background="#ff585857"
            android:layout_marginLeft="5dp"
            android:visibility="invisible"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/limpiar"
            android:src="@drawable/ico_11_limpiar"
            android:background="#ff585857"
            android:layout_gravity="top" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guardar"
            android:src="@drawable/ico_06_guard"
            android:background="#ff585857"
            android:baselineAlignBottom="false"
            android:layout_marginLeft="5dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/atras"
            android:src="@drawable/ico_05_flecha_atr"
            android:background="#ff585857"
            android:layout_marginLeft="5dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/adelante"
            android:src="@drawable/ico_07_flecha_adel"
            android:background="#ff585857"
            android:layout_marginLeft="5dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:id="@+id/tabla1">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/linea1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/Area"
                        android:id="@+id/lbl_area_trabajo"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="#ffffffff" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/Bloque"
                        android:id="@+id/lbl_bloque"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="#ffffffff" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linea2">

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:id="@+id/area_trabajo"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:touchscreenBlocksFocus="true"
                        android:background="@drawable/marco1" />

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:id="@+id/bloque"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/marco1" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="5dp"
                    android:id="@+id/linea3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/Grupo"
                        android:id="@+id/lbl_grupo"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="#ffffffff" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:id="@+id/linea4">

                    <Spinner
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:id="@+id/grupo"
                        android:background="@drawable/marco1"
                        android:layout_weight="1"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="60dp" />

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:background="#fffdffdf"
                    android:gravity="center_horizontal"
                    android:id="@+id/linea5">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/PersonalEquipo"
                        android:id="@+id/pers_eq"
                        android:layout_span="2"
                        android:gravity="center_horizontal"
                        android:textColor="#ff000000" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#fffdffdf"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/linea6">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:id="@+id/personal"
                        android:layout_weight="1"
                        android:layout_gravity="top|center"
                        android:text="@string/Personal"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/marco2"
                        android:layout_marginBottom="10dp"
                        android:textColor="#ff000000"
                        android:onClick="VincularPersonal"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:id="@+id/equipo"
                        android:layout_weight="1"
                        android:layout_gravity="top|center"
                        android:text="@string/Equipo"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/marco3"
                        android:layout_marginBottom="10dp"
                        android:onClick="VincularEquipo"
                        android:textColor="#ff000000" />

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#fffdffdf"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/linea7" >

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:id="@+id/foto_grupo"
                        android:layout_weight="1"
                        android:layout_gravity="top|center"
                        android:text="@string/FotoPersonal"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/marco11"
                        android:layout_marginBottom="10dp"
                        android:textColor="#ff000000"
                        android:onClick="VincularFotoGrupo" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:id="@+id/foto_equipo"
                        android:layout_weight="1"
                        android:layout_gravity="top|center"
                        android:text="@string/FotoEquipo"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/marco12"
                        android:layout_marginBottom="10dp"
                        android:onClick="VincularFotoEquipo"
                        android:textColor="#ff000000" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/linea8"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp" >

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/invisible1"
                        android:layout_weight="0.5"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="5dp"
                        android:paddingBottom="4dp"
                        android:background="#ff585857" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:id="@+id/lbl_hr_inicio"
                        android:layout_weight="0.85"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textColor="#ffffffff"
                        android:textSize="15sp"
                        android:text="@string/HoraInicio" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:id="@+id/lbl_hr_final"
                        android:layout_weight="0.85"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp"
                        android:textColor="#ffffffff"
                        android:textSize="15sp"
                        android:text="@string/HoraFinal" />

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/invisible2"
                        android:layout_weight="0.5"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="8dp"
                        android:paddingBottom="4dp"
                        android:background="#ff585857" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/linea9"
                    android:layout_gravity="center_vertical">

                    <ImageButton
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:id="@+id/captura_hr_sistema1"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="5dp"
                        android:paddingBottom="4dp"
                        android:src="@drawable/ico_17_reloj"
                        android:background="#ff585857" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:inputType="time"
                        android:ems="10"
                        android:id="@+id/hora_inicio"
                        android:layout_weight="0.85"
                        android:background="@drawable/marco1"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textColor="#fff2ff2d"
                        android:textSize="15sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:inputType="time"
                        android:ems="10"
                        android:id="@+id/hora_final"
                        android:layout_weight="0.85"
                        android:background="@drawable/marco1"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp"
                        android:textColor="#fff2ff2d"
                        android:textSize="15sp" />

                    <ImageButton
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:id="@+id/captura_hr_sistema2"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="8dp"
                        android:paddingBottom="4dp"
                        android:src="@drawable/ico_17_reloj"
                        android:background="#ff585857" />
                </TableRow>

            </TableLayout>

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/Mapeo"
                android:id="@+id/btn_mapeo"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/marco5"
                android:textColor="#ff000000"
                android:layout_marginTop="10dp"
                android:onClick="VincularMapeoSistem" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
