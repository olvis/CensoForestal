<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:ignore="ContentDescription"
    tools:context="com.trackm3.censoforestal.ListaEspecie"
    android:background="#ffa6acdd">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/AdicionEspecies"
        android:id="@+id/textView30"
        android:textColor="#ff000000"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableRow8"
        android:layout_marginTop="5dp" >

    </TableRow>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout5"
        android:paddingTop="5dp" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton31"
            android:src="@drawable/ico_08_menu_aux"
            android:background="#ffa6acdd" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton32"
            android:background="#ff585857"
            android:layout_marginLeft="5dp"
            android:visibility="invisible"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton33"
            android:src="@drawable/ico_12_eliminar"
            android:background="#ffa6acdd"
            android:layout_marginLeft="5dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton36"
            android:src="@drawable/ico_10_adicionar"
            android:background="#ffa6acdd"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#ff6e7292">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:id="@+id/nueva_especie"
                    android:layout_gravity="center_horizontal"
                    android:hint="@string/NuevaEspecie"
                    android:textColor="#ff000000"
                    android:background="#ffffffff"
                    android:layout_margin="20dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:inputType="textCapSentences"
                    android:textColorHint="#ffb1b1b1" />

            </TableLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
